{
    "manifest_version": 3,
    "name": "Metin Özetleyici",
    "version": "1.0",
    "description": "Tıklayın ve herhangi bir metninizi özetleyelim.",
    "permissions": ["activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
      }
    }
  }
  